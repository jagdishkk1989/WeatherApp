<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/currentTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Body1"
            android:text="Temp: "
            android:textColor="@android:color/black"
           />

        <ImageView
            android:id="@+id/weatherImage"
            android:layout_width="78dp"
            android:layout_height="62dp"
            android:layout_below="@+id/currentTemp"
            android:src="@drawable/ic_sun"></ImageView>

        <TextView
            android:id="@+id/day"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/weatherImage"
            android:gravity="right"
            android:text="Day"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/desc"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/day"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/weatherImage"
            android:gravity="right"
            android:text="Desc"
            android:textColor="@android:color/black" />


        <RelativeLayout
            android:id="@+id/tempValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weatherImage">

            <TextView
                android:id="@+id/minTemp"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="32"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/maxTemp"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/minTemp"
                android:gravity="right"
                android:text="35"
                android:textColor="@android:color/black" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/weatherImage"
            android:layout_toRightOf="@+id/tempValue"
            android:gravity="right">

            <TextView
                android:id="@+id/otherInfo"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test"
                android:textColor="@android:color/black" />

        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>